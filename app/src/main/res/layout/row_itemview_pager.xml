<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_32sdp">

    <ImageView
        android:id="@+id/img_boarding"
        android:layout_width="0dp"
        android:layout_height="206dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iso_acomp" />

    <TextView
        android:id="@+id/tv_boarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mplus_rounded1c_extrabold"
        android:text="@string/boarding1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_boarding" />

    <TextView
        android:id="@+id/tvsubt_boarding"
        android:layout_width="347dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mplus_rounded1c_medium"
        android:text="@string/boarding3"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_boarding" />
</androidx.constraintlayout.widget.ConstraintLayout>