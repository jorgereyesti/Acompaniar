<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para botones -->
    <style name="StandardButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mplus_rounded1c_extrabold</item>
        <item name="android:backgroundTint">@color/prim</item> <!-- Efecto de presionar -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:elevation">4dp</item> <!-- Sombra en API 21+ -->
    </style>
    <style name="BorderButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mplus_rounded1c_extrabold</item>
        <item name="android:background">@drawable/button_border</item> <!-- Aplicar el contorno violeta -->
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:elevation">4dp</item> <!-- Sombra en API 21+ -->
    </style>
</resources>